<div class="controls">
  <div class="query">
    {{text-field value=this.query placeholder=this.queryPlaceholder}}

    <div class="custom-only">
      {{input type="checkbox" checked=this.customOnly}}
      <span>{{i18n "multilingual.languages.custom_only"}}</span>
    </div>
  </div>

  <div class="buttons">
    {{multilingual-uploader
      id="multilingual-languages-uploader"
      uploading=this.uploading
      uploadType="language"
      done=(action "languagesUploaded")
    }}

    {{d-button
      action=(action "update")
      class="btn-primary"
      icon="floppy-disk"
      label=this.updateState
      disabled=this.updateLanguagesDisabled
    }}
  </div>
</div>

{{#if this.refreshing}}
  {{loading-spinner}}
{{else}}
  {{#if this.anyLanguages}}
    {{admin-language-list
      type="custom"
      languages=this.filteredLanguages
      order=this.order
      ascending=this.ascending
      updatedLanguages=this.updatedLanguages
      updateLanguages=(action "updateLanguages")
    }}
  {{else}}
    <p>{{i18n "search.no_results"}}</p>
  {{/if}}
{{/if}}